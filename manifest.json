{
  "manifest_version": 3,
  "name": "Falter Restaurant Map",
  "version": "1.0.1",
  "description": "View Falter Lokalf√ºhrer search results on an interactive map - works across all 9 Austrian federal states",
  "author": "Paul Timotheus Zimmert",

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "https://www.falter.at/*",
    "https://nominatim.openstreetmap.org/*"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://nominatim.openstreetmap.org/ https://*.openstreetmap.org/ https://*.tile.openstreetmap.org/"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.falter.at/lokalfuehrer/suche*"
      ],
      "js": [
        "vendor/leaflet/leaflet.js",
        "vendor/leaflet/leaflet.markercluster.js",
        "content.js"
      ],
      "css": [
        "vendor/leaflet/leaflet.css",
        "vendor/leaflet/leaflet.markercluster.css",
        "vendor/leaflet/leaflet.markercluster.default.css",
        "content.css"
      ]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["modules/*.js"],
      "matches": ["https://www.falter.at/*"]
    }
  ]
}
